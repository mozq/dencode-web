<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1"
	>
  
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>org.mifmi.commons4j.web.servlet.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>charset</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  
  <filter>
    <filter-name>RedirectFilter</filter-name>
    <filter-class>org.mifmi.commons4j.web.servlet.filter.RedirectFilter</filter-class>
    <init-param>
      <param-name>from</param-name>
      <param-value>(http|https)://(.*\.)?dencode\.com</param-value>
    </init-param>
    <init-param>
      <param-name>to</param-name>
      <param-value>https://dencode.com</param-value>
    </init-param>
    <init-param>
      <param-name>regex</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>temporary</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>RedirectFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
</web-app>